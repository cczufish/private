<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/share_menu_content_margintop"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/share_menu_content_paddingleft"
        android:paddingRight="@dimen/share_menu_content_paddingleft" >

        <LinearLayout
            android:layout_width="@dimen/width_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/share_to_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_share_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/share_menu_text_margintop"
                android:text="分享给微信好友"
				style="@style/text_description"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/share_to_moments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_share_moments" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/share_menu_text_margintop"
                android:text="分享微信朋友圈"
				style="@style/text_description"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/share_to_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/share_menu_text_margintop"
                android:text="分享给QQ好友"
				style="@style/text_description"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/share_to_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_share_weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/share_menu_text_margintop"
                android:text="分享到新浪微博"
				style="@style/text_description"
                 />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/share_cancle"
        android:layout_marginTop="@dimen/share_menu_content_divide_height"
        android:layout_marginBottom="@dimen/share_menu_content_divide_height"
        style="@style/btn_minor"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/btn_big_margin_left"
        android:layout_marginRight="@dimen/btn_big_margin_left"
        android:text="取消" />

</LinearLayout>