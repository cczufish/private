<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/discover_item_height" >

    <ImageView
        android:id="@+id/iv_discover_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/discovery_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_item_shadow_height"
        android:layout_gravity="bottom"
        android:background="@drawable/selector_discover_item_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_item_shadow_height"
        android:layout_gravity="bottom" 
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_discover_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/discover_item_title_paddingLeft"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/tv_discover_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/discover_item_date_paddingRight"
            android:paddingRight="@dimen/discover_item_date_paddingRight"
            android:text="时间"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

</FrameLayout>