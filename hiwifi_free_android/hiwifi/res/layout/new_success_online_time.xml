<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/success_online_header_hehe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/selector_wifi_item"
    android:gravity="center"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/content_bg_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:id="@+id/availability_bg"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/wifilist_itembg_unkown"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lockerImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/wifilist_item_5g_marginleft"
                android:drawableRight="@drawable/icon_5g"
                android:gravity="left"
                android:singleLine="true"
                android:text="textview"
                android:textColor="@color/wifilist_emphasize_color"
                android:textSize="@dimen/wifilist_item_master_textsize" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/hiwifi_tag_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/hiwif_fag" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/release_time_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/release_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/remain"
                        android:textColor="@color/wifilist_normal_color"
                        android:textSize="@dimen/success_time_release_textsize"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/release_time_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="3dp"
                        android:drawableRight="@drawable/ic_free_small"
                        android:singleLine="true"
                        android:text="9分钟"
                        android:textColor="@color/break_wifi_bg"
                        android:textSize="@dimen/success_time_release_textsize"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/forever_free_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/ic_free_small"
                    android:singleLine="true"
                    android:text="@string/free_forever"
                    android:textColor="@color/success_bg"
                    android:textSize="@dimen/success_time_release_textsize"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_bar_arro" />

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/wifi_state_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/wifilist_normal_color"
                    android:textSize="@dimen/wifilist_item_slave_textsize" />

                <ImageView
                    android:id="@+id/wifi_state_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/btn_ok" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>