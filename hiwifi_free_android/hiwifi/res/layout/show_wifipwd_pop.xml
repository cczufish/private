<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_pwd_popup"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/check_pop_content_padding_bottom"
        android:paddingTop="@dimen/check_pop_content_padding_top" >

        <TextView
            android:id="@+id/popup_tackpic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/check_pop_password_margin_right"
            android:layout_marginRight="@dimen/check_pop_password_margin_right"
            android:gravity="center_horizontal"
            android:text="密码"
            android:textColor="#ffffff"
            android:textSize="@dimen/check_text_threesize" />

        <TextView
            android:id="@+id/popup_wifi_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/check_pop_password_margin_right"
            android:layout_marginRight="@dimen/check_pop_password_margin_right"
            android:layout_marginTop="@dimen/check_pop_password_margin_top"
            android:gravity="center_horizontal"
            android:text="111111"
            android:textColor="#ffffff"
            android:textSize="@dimen/check_popup_pwdsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/check_pop_btn_margin_bottom" >

        <Button
            android:id="@+id/popup_sure"
            style="@style/btn_minor"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_size_height_big"
            android:layout_marginLeft="@dimen/btn_big_margin_left"
            android:layout_marginRight="@dimen/btn_big_margin_left"
            android:text="确 定"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>