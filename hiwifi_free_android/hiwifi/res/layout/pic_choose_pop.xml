<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F4F8"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/setting_content_padding_top"
    android:paddingTop="@dimen/setting_content_padding_top" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/btn_big_padding_top" >

        <Button
            android:id="@+id/popup_tackpic"
            style="@style/btn_major"
            android:layout_width="fill_parent"
            android:layout_marginLeft="@dimen/btn_big_margin_left"
            android:layout_marginRight="@dimen/btn_big_margin_left"
            android:text="照 相"
            android:textSize="@dimen/check_text_twosize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/btn_big_padding_top"
        android:paddingTop="@dimen/btn_big_padding_top" >

        <Button
            android:id="@+id/popup_photo"
            style="@style/btn_major"
            android:layout_width="fill_parent"
            android:layout_marginLeft="@dimen/btn_big_margin_left"
            android:layout_marginRight="@dimen/btn_big_margin_left"
            android:text="相 册"
            android:textSize="@dimen/check_text_twosize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/btn_big_padding_top" >

        <Button
            android:id="@+id/popup_cancle"
            style="@style/btn_minor"
            android:layout_width="fill_parent"
            android:layout_marginLeft="@dimen/btn_big_margin_left"
            android:layout_marginRight="@dimen/btn_big_margin_left"
            android:text="取 消"
            android:textColor="#ffffff"
            android:textSize="@dimen/check_text_twosize" />
    </LinearLayout>

</LinearLayout>