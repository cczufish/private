<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circular_bg_shape"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_loading"
            android:layout_width="@dimen/dialog_loading_icon_size"
            android:layout_height="@dimen/dialog_loading_icon_size"
            android:layout_marginBottom="@dimen/dialog_margin10"
            android:layout_marginTop="@dimen/dialog_margin10"
            android:background="@drawable/icon_loading" />

        <TextView
            android:id="@+id/tv_laoding_status"
            style="@style/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dialog_margin15"
            android:layout_marginLeft="@dimen/dialog_loading_icon_size"
            android:layout_marginRight="@dimen/dialog_loading_icon_size"
            android:gravity="center"
            android:text="正在加载" />
    </LinearLayout>

</RelativeLayout>