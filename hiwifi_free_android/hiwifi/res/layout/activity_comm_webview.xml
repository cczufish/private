<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hiwifi.hiwifi"
    android:id="@+id/web_sildingFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/webview_rootlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.hiwifi.app.views.UINavigationView
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_height"
            android:background="@color/nav_background_color"
            app:right_drawable="@drawable/wap_share_icon"
            app:left_drawable="@drawable/icon_back"
            app:tv_title="SHIT" >
        </com.hiwifi.app.views.UINavigationView>

        <WebView
            android:id="@+id/webView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/nav"
            android:background="#F0F0F0" />

        <ProgressBar
            android:id="@+id/progressBar_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/shadow"
             android:alpha="0.8"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/popup_main_background"
            android:visibility="invisible" >
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>