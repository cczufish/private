<?xml version="1.0" encoding="utf-8"?>
<com.hiwifi.app.views.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/auth_sildingFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/auth_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f0f0f0"
        android:orientation="vertical" >
       

        <ListView
            android:id="@+id/lvPlats"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_shadow" />
    </RelativeLayout>

</com.hiwifi.app.views.SildingFinishLayout>