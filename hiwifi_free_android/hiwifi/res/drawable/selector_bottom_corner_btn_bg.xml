<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/dialog_item_bg" />

            <solid android:color="@color/dialog_item_bg" />

            <corners android:bottomRightRadius="@dimen/common_radius" 
                android:bottomLeftRadius="@dimen/common_radius"/>
        </shape></item>
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/white" />

            <solid android:color="@color/white" />

            <corners android:bottomRightRadius="@dimen/common_radius" 
                android:bottomLeftRadius="@dimen/common_radius"/>
        </shape></item>

</selector>